<?xml version="1.0"  encoding="UTF-8" ?>

<base:htmlview id="data_jtable" >

  <base:image
   src="images/text-xml.png"
    boxing=",,right,top,-4px,4px"
    class="fade"
    tip="view source"
    onclick="subv_cont.goto('view_source&amp;source=webgets.schedule.datepicker');$$.removeClass(view_source, 'diag_hidden');"
    />    
  
  
  <data:jtable
    id="jtable"
    rowHeight="100"
    cellsByRow="1"
    filling="p"     
    class="caption-item-middle "
    boxing=",40px,,0px">
  
 
    <data:jtablecell class="rowcell" >
      <pack:hlayout naked="true">
    
        <pack:hlaycell width="100px">
           <base:image
            id="icon"
            boxing="95%,95%,"
            eval_field="jtable:title"
            eval_field_command=""
            src="images/loading.gif"/>
        </pack:hlaycell>
        
        <pack:hlaycell style="border-right:1px solid grey;">
          <base:label
            boxing="5px,20px,5px,top,,4px"
            valign="middle" 
            field="jtable:title"
            field_format="%s"
            class="caption-item-label font20" />
    
          <base:label
            boxing="5px,30px,5px,5px"
            class="caption-item-label font12"
            valign="top"
            field="jtable:description" />
         
        </pack:hlaycell>
    
        <pack:hlaycell width="150px" style="border-right:1px solid grey;">         
          <base:label
            boxing="5px,5px,5px,5px"
            class="caption-item-label font16 bold"
            valign="middle"
            halign="center"
            field_format="Year : %s&lt;br&gt;Durat. : %smin"
            field="jtable:release_year,jtable:length"/> 
    
 
        </pack:hlaycell>

      </pack:hlayout>
    </data:jtablecell>

  </data:jtable>
</base:htmlview>